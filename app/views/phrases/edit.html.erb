<p>
<b><font size="6" color="black"> Rating phrases, <%= @relevant_phrases.length %> phrases left</font></b>
</p>
<%= paginate @relevant_phrases %>

<table>

<% @relevant_phrases.each do |ph| %>
 <%= form_for(ph) do |p| %>
	<tr><td width="400">	<p> <%= ph.content %> </td>
