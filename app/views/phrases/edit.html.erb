	<td width = "500">	<%= f.radio_button :rating, "unknown" %>  <font size="3" color="#666666">Unknown</font> |
		<%= f.radio_button :rating, "positive" %> <font size="3" color="green">Positive</font> | 
		<%= f.radio_button :rating, "negative" %>  <font size="3" color="red">Negative </font> | 
<!--		<%= f.radio_button :rating, "junk" %>  <font size="3" color="black">junk </font> | -->
		
			<%= f.hidden_field :user_id, :value => current_user.id %>
			<%= f.hidden_field :username, :value => current_user.username %>
			
<% end %>
<%= p.submit "Rate!" %>
<% end %><% end %></td></tr>
</table>

